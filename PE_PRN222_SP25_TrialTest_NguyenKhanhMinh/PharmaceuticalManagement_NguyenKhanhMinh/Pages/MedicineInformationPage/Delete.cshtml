@model PharmaceuticalManagement_NguyenKhanhMinh.Pages.MedicineInformationPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
    String email = HttpContext.Session.GetString("EmailAddress");
    String role = HttpContext.Session.GetString("Role");
    if (!("2").Equals(role))
    {
        Response.Redirect("/NotPermission");
    }
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MedicineInformation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineInformation.MedicineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineInformation.MedicineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineInformation.ActiveIngredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineInformation.ActiveIngredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineInformation.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineInformation.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineInformation.DosageForm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineInformation.DosageForm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineInformation.WarningsAndPrecautions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineInformation.WarningsAndPrecautions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicineInformation.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicineInformation.Manufacturer.ManufacturerName)
        </dd>
    </dl>
    
    <form method="post" onsubmit="return confirmDelete()">
        <input type="hidden" asp-for="MedicineInformation.MedicineId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>

    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this medicine information?");
        }
    </script>
</div>
