@model BusinessObjectsLayer.Models.SystemAccount

@{
    ViewData["Title"] = "Delete System Account";
}

<h2>Delete System Account</h2>

<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>@Model.AccountName</h4>
    <p><strong>Email:</strong> @Model.AccountEmail</p>
    <p><strong>Role:</strong> @Model.AccountRole</p>
</div>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="id" asp-for="AccountId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>